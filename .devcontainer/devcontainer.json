{
    "name": "BXARM",
    "image": "ghcr.io/fae-emea/bxarm",
    "runArgs": ["--privileged"],
    "customizations": {
      "vscode": {
        "extensions": [
            "ms-vscode.cpptools-extension-pack",
            "ms-vscode-remote.vscode-remote-extensionpack",
            "ms-vscode.vscode-serial-monitor",
            "github.vscode-github-actions",
            "iarsystems.iar-debug"
        ]
      }
    },
    "mounts": [
      "type=bind,src=${localEnv:HOME}/.ssh,dst=/build/.ssh",
      "type=bind,src=${localEnv:HOME}/.gnupg,dst=/build/.gnupg",
      "type=bind,src=/usr/local/etc/IARSystems,dst=/usr/local/etc/IARSystems",
      "type=bind,src=/dev/bus/usb,dst=/dev/bus/usb"
    ],
    // Regenerate macros for Intellisense
    "postAttachCommand": "iccarm . --c++ --predef_macros=n .vscode/iccarm_predef.h"
  }
